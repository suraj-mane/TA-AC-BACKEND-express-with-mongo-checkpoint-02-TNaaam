<!DOCTYPE html>
<html>
  <head>
    <title>Events</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Events</a>
        </div>
        <ul>
          <li class="nav-li"><a href="/" class="nav-link">Home</a></li>
          <li class="nav-li"><a href="/event" class="nav-link">Show events</a></li>
          <li class="nav-li"><a href="/event/new" class="nav-link">Create event</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <div>
        <form class="search" action="">
          <input class="search-input" type="text" name="text">
          <button class="search-btn">search</button>
        </form>
      </div>
     <div class="m">
      <div class="c">
        <% category.forEach( ele => {%>
          <ul>
            <li class="category"><%= ele%></li>
          </ul>
        <%})%>
      </div>
      <div class="e">
        <% main.forEach(ele => {%>
          <ul>
            <a href="/event/<%= ele.id%>">
              <li class="category"><%= ele.title%></li>
            </a>
          </ul>
        <%})%>
      </div>
     </div>
    </main>
    <footer class="footer">
      <div>
        <h2 class="footer-brand">Events</h2>
      </div>
    </footer>
  </body>
</html>
